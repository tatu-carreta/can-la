		       		<input  ng-file-select type="file" multiple  />
		    
								<div ng-repeat="item in uploader.queue">
										<strong>{{ item.file.name }}</strong>
										<!-- Image preview -->
										<!--auto height-->
										<!--<div ng-thumb="{ file: item.file, width: 100 }"></div>-->
										<!--auto width-->
										<div class="minArchivoCargado">
											<div ng-show="uploader.isHTML5" ng-thumb="{ file: item.file, height: 100 }" class></div>
											<!--fixed width and height -->
											<!--<div ng-thumb="{ file: item.file, width: 100, height: 100 }"></div>-->
												
											<button ng-show="imageLoaded" ng-click="deleteFile()" class="eliminarChico eliminarFoto"></button>
												
										</div>
										<div class="alertSuccess" ng-show="alertSuccess && imageLoaded" ng-animate="{show:'animate-show', hide:'animate-hide'}">{{alertSuccess}}</div>
										<div class="alertError" ng-show="alertError && imageLoaded">{{alertError}}</div>
										<input ng-model="file" name="file" type="hidden" value="{{img}}" style="margin-bottom:20px" />
										<div class="progress" style="margin-bottom: 0;">
													<div class="progress-bar" role="progressbar" ng-style="{ 'width': item.progress + '%' }"></div>
										</div>
[% endmacro %]