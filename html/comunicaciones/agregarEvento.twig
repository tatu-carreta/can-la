{# empty Twig template #}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" ng-click="cancel()"></button>
        <h4 class="modal-title">Agregar evento</h4>
    </div>

    <form>
        <div class="modal-body"  >


            <table class="tablaModal">
                <tr>
                    <td>Foto:</td>
                    <td>{# INSERTAR MACRO DE IMAGENES #}
                        <div class="subirFoto"><!--<a class="eliminarChico"></a>-->
                            <div class="">
                                [% import 'subirImagen.twig' as subirImagen%]
                                [[ subirImagen.input() ]]
                            </div>
                            <div class="clear"></div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><p class="textoAclaracion">Nota: la imagen original debe tener 225px de ancho x 170px de alto.</p></td>
                </tr>
                <tr>
                    <td>Título:</td>
                    <td><input maxlength="40" type="text" ng-model="form.tituloEvento" ng-init="form.tituloEvento = '' " name="tituloEvento">
                    <p class="textoAclaracion">Nota: El título tiene un límite de 40 caracteres.</p></td>
                </tr>
                <tr>
                    <td>Lugar:</td>
                    <td><input type="text" ng-model="form.lugarEvento" ng-init="form.lugarEvento = '' "  name="lugarEvento"></td>
                </tr>
                <tr>
                    <td>Fecha de Inicio:</td>
                    <td>
                        <input type="text" ng-model="form.fechaInicioEvento" ng-init="form.fechaInicioEvento = '' " name="fechaInicioEvento"><span class="textoAclaracion">(dd/mm/aaaa)</span>
                        <input type="hidden" ng-model="form.section" ng-init="form.section = 'agregarEvento' "  name="section" ></td>
                </tr>
                <tr>
                    <td>Fecha de Finalización:</td>
                    <td>
                        <input type="text" ng-model="form.fechaFinEvento" ng-init="form.fechaFinEvento = '' " name="fechaFinEvento"><span class="textoAclaracion">(dd/mm/aaaa)</span></td>
                </tr>
                <tr>
                    <td>Bajada:</td>
                    <td><textarea maxlength="200" ng-model="form.descripcionEvento" ng-init="form.descripcionEvento = '' " name="descripcionEvento"></textarea>
                    <p class="textoAclaracion">Nota: La bajada tiene un límite de 200 caracteres.</p></td>
                </tr>
                <tr>
                    <td>Descripción:</td>
                    <td><textarea data-ck-editor ng-model="form.cuerpoEvento" ng-init="form.cuerpoEvento = '' " name="cuerpoEvento"></textarea></td>
                </tr>
                {#
                <tr>
                    <td>Destacada:</td>
                    <td><input type="checkbox" ng-model="form.destacadoEvento" ng-init="form.destacadoEvento = '' " name="destacadoEvento" /></td>
                </tr>
#}
            </table>
        </div>
        <div class="modal-footer">
            <div class="">
                <button type="button" class="btnOutline cancelar marginR btn-default" ng-click="cancel()">Cancelar</button>
                <button type="button" ng-click="submitForm('[[ paths.PATH_CONTROLLER_COMUNICACIONES ]]controladorAdminModel.php?language=[[ lang ]]', form)" class="btn publicar btn-primary" >Publicar</button>
            </div>
        </div>
    </form><!-- form -->
</div>