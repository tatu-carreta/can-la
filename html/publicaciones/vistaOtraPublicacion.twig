<script src="[[ paths.PATH_JS ]]controllers.js"></script>

<script type="text/javascript">
    urlSubmit = '[[ paths.PATH_CONTROLLER_PUBLICACIONES ]]controladorAdminModel.php?seccion=agregarOtraPublicacion=[[ lang ]]';
    urlUploadImage = '[[ paths.PATH_PHP ]]upload.php?section=publicaciones';
    controladorModel = '[[ paths.PATH_CONTROLLER_PUBLICACIONES ]]controladorAdminModel.php';
    lang = '[[ lang ]]';
    section = 'listadoOtraPublicacion';
    </script>



    <section>
        <div class="contentInterno">
            <div class="contenedor">
                <p class="ubicacion"><a href="[[paths.PATH_HOME]][% if(localhost) %]?language=[[ lang ]][% else %][[ lang ]][% endif %]">[[ texts.inicio ]]</a>|<span class="seccion">[[ texts.publicaciones ]]</span>|<span class="seccion">[[ texts.otras_publicaciones ]]</span></p>
                <h2>[[ texts.otras_publicaciones ]]</h2>

                [% if(perfil == 1) %]
                <div class="divBtnAgregar" ng-controller="modalDefault" ng-init="init('[[paths.PATH_CONTROLLER_PUBLICACIONES]]controladorAdmin.php?seccion=agregarOtraPublicacion', 'pdfController')">
                    <a class="btn agregar" ng-click="open()" >Agregar Publicación</a>
                </div>
                [% endif %]

                <ul ng-controller="mainController" ng-init="init()">
                    <li ng-repeat="data in dataArray track by data.idOtraPublicacion" class="logItem unidaddeContenido publicacion">
                        <h4>{{data.tituloOtraPublicacion}}</h4>
                        <p>{{data.descripcionOtraPublicacion}}</p>
                        <a href="{{data.urlOtraPublicacion}}" target="_blank"><p>{{data.urlOtraPublicacion}}</p></a>

                        [% if(perfil == 1) %]
                        <div class="comboEliminarEditar">
                            <div class="float marginR" ng-controller="mainController" >
                                <div class="success " ng-show="alertSuccess">{{alertSuccess}}</div>
                                <div class="error" ng-show="alertError">{{alertError}}</div>
                                <button class="btnOutline eliminar" type="button" ng-click="eliminarGenerico(data.idOtraPublicacion, '[[ paths.PATH_CONTROLLER_PUBLICACIONES ]]controladorAdminModel.php', 'borrarOtraPublicacion', '¿Está seguro que desea borrar la publicación?' )">Borrar</button>
                            </div>
                            <div class="float" ng-controller="modalDefault" ng-init="init('[[ paths.PATH_CONTROLLER_PUBLICACIONES ]]controladorAdmin.php?seccion=modificarOtraPublicacion&idOtraPublicacion='+data.idOtraPublicacion+'&language=[[ lang ]]', 'imgController')">
                                <a class="btn editar" ng-click="open()">Editar</a>
                            </div>
                        </div>
                        [% endif %]

                    </li>
                    {# [% import 'etiquetas.twig' as etiquetas%]
                    [[ etiquetas.input(paths, 1, "sobrecanla") ]] #}
                </ul>

            </div>
        </div>
    </section>